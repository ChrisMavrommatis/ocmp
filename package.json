{
  "name": "ocmp",
  "version": "1.0.0",
  "description": "OCMP Consent Management Platform",
  "scripts": {
    "install-all": "npm install && bundle install",
    "serve": "npm run clean-docs && npm run gulp-build-docs-src && npm run jekyll-serve-docs-ssl",
    "watch": "gulp watch",
		"build" : "gulp BuildSrc && gulp build-src-gtm_html--production",
    "jekyll-serve-docs": "bundle exec jekyll serve --trace",
    "jekyll-serve-docs-ssl": "bundle exec jekyll serve --trace --ssl-cert _ssl/localhost.crt --ssl-key _ssl/localhost.key",
    "gulp-build-docs-src": "gulp BuildDocsSrc",
    "clean-docs": "rm -f docs/css/* && rm -f docs/js/*",
    "clean-jekyll": "npm run clean-docs && rm -rf .dev && rm -f Gemfile.lock",
    "clean-node": "rm -f package-lock.json && rm -rf node_modules",
    "clean-dist": "rm -rf dist/*",
    "uninstall-all": "npm run clean-node && npm run clean-dist && npm run clean-jekyll",
    "generate-ssl": "sh tools/certificate_generation/run.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ChrisMavrommatis/ocmp.git"
  },
  "keywords": [
    "cmp",
    "cookie consent",
    "consent management platform"
  ],
  "author": "Chris Mavrommatis",
  "license": "SEE LICENSE IN LICENSE.txt",
  "bugs": {
    "url": "https://github.com/ChrisMavrommatis/ocmp/issues"
  },
  "homepage": "https://github.com/ChrisMavrommatis/ocmp#readme",
  "devDependencies": {
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^8.0.0",
    "gulp-file-include": "^2.3.0",
    "gulp-if": "^3.0.0",
    "gulp-include": "^2.4.1",
    "gulp-join-media-queries": "^1.2.0",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^5.1.0",
    "gulp-uglify": "^3.0.2",
    "gulp-uglifycss": "^1.1.0",
    "sass": "^1.50.0"
  }
}
